                        <MenuItem Header="Recent file 1" Icon="ðŸ—Ž" />
                        <MenuItem Header="Recent file 2" Icon="ðŸ—Ž" />
                        <MenuItem Header="Recent file 3" Icon="ðŸ—Ž" />
                        <MenuItem Header="Recent file 4" Icon="ðŸ—Ž" />
                        <Separator />
                        <MenuItem Header="Clear recent files"
                                  Icon="ðŸ—™"
                                  InputGesture="Ctrl + Alt + O" />
                    </MenuItem>
                    <MenuItem Header="Save"
                              Icon="ðŸ’¾"
                              InputGesture="Ctrl + S" />
                    <MenuItem Header="Fullscreen"
                              HotKey="F11"
                              Icon="â›¶"
                              InputGesture="F11" />
                    <MenuItem Header="Close"
