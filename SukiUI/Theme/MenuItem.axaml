                <MenuItem Header="Help">
                    <MenuItem ToggleType="CheckBox"
                              Icon="â„¹ï¸"
                              IsChecked="True"
                              Name="MenuItemAbout" Header="About" />
                    <Separator />
                    <MenuItem ToggleType="Radio"
                              Icon="ðŸŒ"
                              Header="Website" />
                    <MenuItem ToggleType="Radio"
                              IsChecked="True"
                              Icon="ðŸ—£"
                              Header="Discussions" />
                    <MenuItem ToggleType="Radio"
